# WealthIncome Unified Platform Environment Configuration
# Copy this file to .env and fill in your actual values

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite:///./data/wealthincome.db
REDIS_URL=redis://localhost:6379/0

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
FINNHUB_API_KEY=your_finnhub_key_here
NEWS_API_KEY=your_news_api_key_here

# Data Provider Settings
DEFAULT_DATA_PROVIDER=yfinance
MARKET_DATA_CACHE_TTL=300
NEWS_CACHE_TTL=900

# Trading Settings
DEFAULT_PORTFOLIO_VALUE=100000.0
MAX_POSITION_SIZE=0.1
DEFAULT_STOP_LOSS=0.05
DEFAULT_TAKE_PROFIT=0.15

# AI/ML Settings
CONFIDENCE_THRESHOLD=0.7
MAX_SIGNALS_PER_DAY=10
AI_MODEL_UPDATE_INTERVAL=3600

# Security Settings
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=3
PASSWORD_MIN_LENGTH=8

# WebSocket Settings
WS_ENABLED=true
WS_PORT=8765
WS_RECONNECT_ATTEMPTS=5
WS_HEARTBEAT_INTERVAL=30

# Feature Flags
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false
ENABLE_AI_INSIGHTS=true
ENABLE_NEWS_SENTIMENT=true
ENABLE_SOCIAL_SENTIMENT=false
ENABLE_OPTIONS_TRADING=false